<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Vista.login"
             BackgroundColor ="#F2E1AF">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Label Text="Bienvenido"  
               HorizontalTextAlignment="Center" 
               FontSize= "50"></Label>

            <Label Text="Iniciar Sesion " 
               HorizontalTextAlignment="Center"
               FontSize="Title"></Label>

            <Entry Placeholder="Correo electronico" HorizontalTextAlignment="Center" FontSize="40" x:Name="txtcorreo"/>
            <Label Text=" " TextColor="Red" x:Name="label_correo" />
            <Entry Placeholder="Contraseña" HorizontalTextAlignment="Center" FontSize="40" x:Name="txtPassword"/>
            <Label Text=" " TextColor="Red" x:Name="labe_contraseña" />
            <Button Text="Iniciar sesion" Clicked="Button_Clicked"/>
            <Label Text=" " TextColor="Red" x:Name="label_estado" />
            <Label Text="¿Aun no tienes una cuenta? Registrate" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>